    <div id="print-pdf" align="center">
        <a id="print-me" class="print-btn"
           href='@Url.Action("PrintMyView", "Paper",
             new { id = Model.PaperId,
                   title = Model.PaperTitle,
                   author = Model.Author,
                   journalName = Model.JournalName,
                   publisher = Model.Publisher,
                   category = Model.Category,
                   methodology = Model.Methodology,
                   practice = Model.Practice,
                   outcomeBeingTested = Model.OutcomeBeingTested,
