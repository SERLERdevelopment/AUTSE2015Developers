@model Serler.Models.PaperViewModel

@{
    ViewBag.Title = "ModeratePaper";
}

<div class="container">
    <h2>List of unmoderated papers:</h2>
    <br />
    @using (Html.BeginForm())
    {
        @Html.HiddenFor(m => m.PaperId)
        <div class="row form-group">
            <div class="row">
                <div class="col-md-2">
                    <label>Paper Title</label>
                </div>
                <div class="col-md-10">
                    @Html.TextBoxFor(m => m.PaperTitle, new { @class = "form-control", type = "text", ReadOnly = "true" })
                </div>
            </div>
            <br />
            <div class="row">
                <div class="col-md-2">
                    <label>Research category</label>
                </div>
                <div class="col-md-10">
                    @Html.TextBoxFor(m => m.Category, new { @class = "form-control", type = "text", ReadOnly = "true"  })
                </div>
            </div>
            <br />
            <div class="row">
                <div class="col-md-2">
                    <label>Year of publication</label>
                </div>
                <div class="col-md-10">
                    @Html.TextBoxFor(m => m.Date, new { @class = "form-control", type = "text", ReadOnly = "true"  })
                </div>
            </div>
            <br />
            <div class="row">
                <div class="col-md-2">
                    <label>Author</label>
                </div>
                <div class="col-md-10">
                    @Html.TextBoxFor(m => m.Author, new { @class = "form-control", type = "text", ReadOnly = "true" })
                </div>
            </div>
            <br />
            <div class="row">
                <div class="col-md-2">
                    <label>Link to paper</label>
                </div>
                <div class="col-md-10">
                    @Html.TextBoxFor(m => m.PaperLink, new { @class = "form-control", type = "text", ReadOnly = "true"})
                </div>
            </div>
            <br />
            <div class="row">
                <div class="col-sm-2">
                    <label>Is moderated?</label>
                </div>
                <div class="col-sm-10">
                    @Html.CheckBoxFor(m => m.IsActive)
                </div>
                </div>
            <br/>
                <div class="row">
                    <div class="col-md-10 col-md-offset-2">
                        <button type="submit" class="btn btn-default">Submit</button>
                    </div>
                </div>
            </div>
    }
</div>
